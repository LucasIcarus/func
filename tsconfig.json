{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "outDir": "dist",
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "examples", "dist"]
}
